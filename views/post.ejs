<%- include("../partials/top.ejs") %>

<div class="centerbox">
    <h1>Post New Story</h1>
    <div id="postbox">
        <form action="/post" method="post" id="postform">
            <label for="title">Title:</label><br>
            <input id="title" name="title" type="text" required><br><br>
            <label for="content">Content:</label><br>
            <textarea id="content" name="content" type="text" form="postform" required></textarea><br><br>
            <label for="flag">Background Flag:</label><br>
            <select id="flag" name="flag">
                <% for (var i = 0; i < flagfiles.length; i++) { %>
                    <option value="<%= flagfiles[i] %>"><%= flagnames[i] %></option>
                <% } %>
            </select><br>
            <br>
            <input type="submit" value="Submit">
        </form>
    </div>
</div>

<%- include("../partials/bottom.ejs") %>